<%= form_with(model: product, local: true) do |form| %>

  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id:"products_name_field", class:"form-control"  %>
  </div><!-- end field -->

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id:"products_description_field", class:"form-control" %>
  </div><!-- end field -->

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, id:"products_image_field", class:"form-control" %>
  </div><!-- end field -->

  <div class="field">
    <%= form.label :colour %>
    <%= form.text_field :colour, id:"products_colour_field", class:"form-control" %>
  </div><!-- end field -->

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id:"products_price_field", class:"form-control" %>
  </div><!-- end field -->

  <div class="actions">
    <%= form.submit %>
  </div><!-- end actions -->
<% end %>
